{
	"manifest_version": 3,
	"name": "Tab Switcher",
	"version": "1.0",
	"description": "Switch tabs with Ctrl + Arrow keys",
	"permissions": ["tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"commands": {
		"next-tab": {
			"suggested_key": {
				"default": "Ctrl+Right"
			},
			"description": "Move to the next tab"
		},
		"prev-tab": {
			"suggested_key": {
				"default": "Ctrl+Left"
			},
			"description": "Move to the previous tab"
		}
	}
}
